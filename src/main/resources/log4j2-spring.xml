<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout
        noConsoleNoAnsi="true"
        pattern="%style{%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}}{black}  %highlight{%-5level} %style{${hostName}}{bright,blue} [%t] %style{%c{32}}{bright,yellow} --- %msg%notEmpty{ --- userUuid: %X{userUuid}, siteUuid: %X{siteUuid}}%n%throwable"/>
    </Console>
  </Appenders>

  <Loggers>
    <!-- LOG everything at INFO level -->
    <Root level="INFO">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>

</Configuration>
